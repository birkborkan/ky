<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="KeyboardButton">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_margin">2dp</item>
        <item name="android:background">@drawable/key_background</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:textSize">18sp</item>
        <item name="android:fontFamily">@font/zaghawa_beria</item>
    </style>

    <style name="KeyboardSpecialButton" parent="KeyboardButton">
        <item name="android:layout_width">48dp</item>
        <item name="android:layout_weight">0</item>
        <item name="android:background">@drawable/special_key_background</item>
    </style>
</resources>